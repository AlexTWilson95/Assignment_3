<%- include("partials/header", { title, user }) %>

<div class="workouts-container">

  <h1 class="page-title text-center">My Workout Plans</h1>

  <div class="workout-cards">

    <% workouts.forEach(w => { %>
      <div class="workout-card">

        <h2 class="workout-card-title"><%= w.workoutName %></h2>

        <div class="card-actions">
          <a href="/workouts/<%= w._id %>/edit" class="edit-btn">edit</a>

          <form action="/workouts/<%= w._id %>?_method=DELETE" method="POST" onsubmit="return confirmDelete();">
            <button class="delete-btn">Delete</button>
          </form>
        </div>

        <a href="/workouts/<%= w._id %>" class="view-btn">view</a>

      </div>
    <% }) %>

    <!-- Add workout card -->
    <a href="/workouts/create" class="add-card">
      + Add Workout
    </a>

  </div>

</div>

<script>
function confirmDelete() {
  return confirm("Are you sure you want to delete this workout?\nThis action cannot be undone.");
}
</script>

<%- include("partials/footer") %>
