<%- include("partials/header", { title: "Signup", user: user }) %>

<div class="signup-container">
  <h2 class="fw-bold mb-4">Create Account</h2>

  <form action="/signup" method="POST" class="signup-box">

    <input type="text" name="username" placeholder="Choose a username" required class="form-control mb-3">
    <input type="password" name="password" placeholder="Choose a password" required class="form-control mb-3">
    <button class="btn btn-dark">Signup</button>

    <p class="mt-3">
      Already have an account?
      <a href="/login" class="signup-link">Login</a>
    </p>

  </form>
</div>

<%- include("partials/footer") %>
